@page
@using comaiz.data.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model comaiz.Pages.ContractRates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ContractRate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContractRate.Id" />
            <div class="form-group">
                <label asp-for="ContractRate.Contract" class="control-label"></label>
                <select asp-for="ContractRate.ContractId" class="form-control"
                        asp-items="@Model.ClientNameSelectList">
                    <option value="">-- Select Client --</option>
                </select>
                <span asp-validation-for="ContractRate.ContractId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ContractRate.Description" class="control-label"></label>
                <input asp-for="ContractRate.Description" class="form-control" />
                <span asp-validation-for="ContractRate.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractRate.Rate" class="control-label"></label>
                <input asp-for="ContractRate.Rate" class="form-control" />
                <span asp-validation-for="ContractRate.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
