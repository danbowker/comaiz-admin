@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FixedCosts[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FixedCosts[0].Contract)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FixedCosts[0].Amount)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.FixedCosts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract!.Schedule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
